<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head.ejs', {title: `${rig.name} | Paralog`}) %>
</head>

<body>
    <%- include('../partials/nav.ejs') %>

    <main class="container">

        <section class="card about">
            <section> 
                <% if (rig.image) { %>
                <img src="<%= rig.image %>" alt="rig photo" class="show-img">
                <% } else { %>
                <img src="https://media.istockphoto.com/id/673781000/photo/skydiving-rig.jpg?s=612x612&w=0&k=20&c=vnqa7o6cb2mIuX-FIX5CzPONwkNUM04i46SFqbJ1l88=" alt="default rig photo" class="no-img">
                <% } %>
            </section> 

            <section>
                <h5 class="card-header"> Name: <%= rig.name %></h5>
                <section>
                    <p><span class="docs-header">Container: </span> <%= rig.container %></p>
                    <p><span class="docs-header">Main: </span> <%= rig.main %></p>
                    <p><span class="docs-header">Reserve: </span> <%= rig.reserve %></p>
                    <p><span class="docs-header">AAD: </span> <%= rig.aad %></p>
                    <% if (rig.reserveRepackDue) { %>
                        <p><span class="docs-header">Reserve Repack Due: </span> <%= rig.reserveRepackDue.toLocaleDateString() %> </p>
                        <% } else { %>
                        <p class="missing">Reserve repack data unavailable</p>
                        <% } %>
                    <% if (rig.aadServiceDue) { %>
                        <p><span class="docs-header">AAD Service Due: </span> <%= rig.aadServiceDue.toLocaleDateString() %> </p>
                        <% } else { %>
                        <p></p>
                        <% } %>
                </section>
            </section>

            <section class="edit-delete">
                <a href="/rigs/<%= rig._id %>/edit" class="button">Edit Rig</a>
                <form method="POST" action="/rigs/<%= rig._id %>?_method=DELETE">
                    <input class="button" type="submit" value="Delete Rig"/>
                </form>
            </section>

        </section>
        <br>
        
        <a href="/rigs" class="button">View all rigs</a>


    </main>

    <%- include('../partials/footer.ejs') %>
</body>

</html>